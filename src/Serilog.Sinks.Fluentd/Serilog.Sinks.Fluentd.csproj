    <RepositoryUrl>https://github.com/cwilgo/serilog-sinks-fluentd</RepositoryUrl>
    <PackageProjectUrl>https://serilog.net/</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup>
    <DebugSymbols>true</DebugSymbols>
