<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;net45</TargetFrameworks>
    <Version>0.4.1-beta.20210830114634</Version>
    <AssemblyName>AlpineComputence.Serilog.Sinks.Fluentd</AssemblyName>
    <RootNamespace>AlpineComputence.Serilog.Sinks.Fluentd</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Wil Tetz / Borys Iermakov</Authors>
    <AssemblyTitle>AlpineComputence.Serilog.Sinks.Fluentd</AssemblyTitle>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Description>
      Serilog adapter for Fluentd
    </Description>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <PackageTags>serilog;fluentd;sink;sinks;serilog sinks;serilog sink</PackageTags>
